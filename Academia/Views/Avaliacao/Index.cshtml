        <th>
            @Html.DisplayNameFor(model => model.Anamnese)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ergometrico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DobrasCutaneas)
