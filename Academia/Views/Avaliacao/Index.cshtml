@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
     @Html.ActionLink("Detalhes", "Detalhes", new { /* id=item.PrimaryKey */ }) |
    @Html.ActionLink("Criar", "criar")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="`Pesquisar" />
