            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Anamnese)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ergometrico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DobrasCutaneas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataRealizacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataAgendamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matricula)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.AvaliacaoID })
         | |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.AvaliacaoID })
        </td>
    </tr>
